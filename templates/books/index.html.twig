{% extends 'base.html.twig' %} 
{% block stylesheets %} 
   <style> 
      .table { border-collapse: collapse; } 
      .table th, td { 
         border-bottom: 1px solid #ddd; 
         width: 250px; 
         text-align: left; 
         align: left; 
      } 
   </style> 
{% endblock %}  
{% block body %} 
   <h2>WEB приложение "Библиотека"</h2> 
   <div> 
      <a href = "{{ path('app_book_new') }}">Add</a> 
   </div>
   <table class = "table">  
      <tr>  
         <th>Название</th>  
         <th>Автор</th>  
         <th>Год</th>  
         <th></th>
         <th></th>
      </tr>  
      {% for x in data %} 
      <tr>  
         <td>{{ x.name }}</td>   
         <td>{{ x.author }}</td>
         <td>{{ x.year }}</td>  
         <td><a href = "{{ path('app_book_update', { 'id' : x.Id }) }}">Edit</a></td>
         <td><a href = "{{ path('app_book_delete', { 'id' : x.Id }) }}">Delete</a></td>
      </tr>  
      {% endfor %} 
   </table> 
{% endblock %}   